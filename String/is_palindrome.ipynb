   "source": [
    "def is_palindrome(word):\n",
    "    reversed = word[::-1]\n",
    "    if word.lower() == reversed.lower():\n",
    "        return True\n",
    "    \n",
    "print(is_palindrome('Deleveled'))"
   ]
  }
